          </children>
        </AnchorPane>
        <HBox alignment="TOP_RIGHT" prefHeight="30.0" spacing="14.0">
          <children>
            <Button onAction="#handleLogin" text="Login" />
            <Button onAction="#handleCancel" text="Cancel" />
          </children>
        </HBox>
      </children>
    </VBox>
    <Label fx:id="resultLabel" textFill="RED" AnchorPane.leftAnchor="14.0" AnchorPane.topAnchor="94.0">
      <font>
        <Font name="Arial Bold" size="16.0" />
      </font>
    </Label>
  </children>
